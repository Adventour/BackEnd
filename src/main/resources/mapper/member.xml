<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.member.model.mapper.MemberMapper">

	<resultMap type="memberDto" id="member">
		<result column="user_id" property="userId"/>
		<result column="user_name" property="userName"/>
		<result column="user_pwd" property="userPwd"/>
		<result column="user_email" property="userEmail"/>
		<result column="user_domain" property="userDomain"/>
		<result column="user_sido" property="userSido"/>
		<result column="user_gugun" property="userGugun"/>
		<result column="salt" property="salt"/>
	</resultMap>
	


	
	<select id="loginMember" parameterType="memberDto" resultMap="member">
		select user_id, user_name from members
		where user_id = #{userId} and user_pwd = #{userPwd}
	</select>
	
	<update id="modifyMember" parameterType="memberDto">
		update members
		<trim prefix="set" suffixOverrides=",">
			<if test="userName">user_name = #{userName},</if>
			<if test="userPwd">user_pwd = #{userPwd},</if>
			<if test="userEmail">user_email = #{userEmail},</if>
			<if test="userDomain">email_domain = #{userDomain},</if>
			<if test="userSido">user_sido = #{userSido},</if>
			<if test="userGugun">user_gugun = #{userGugun},</if>
		</trim>
		where user_id = #{userId}
	</update>

	<select id="getUserSalt" parameterType="memberDto" resultType="string">
		select salt from members
		where user_id = #{userId}
	</select>
	
</mapper>