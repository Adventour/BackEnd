<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.plan.model.mapper.PlanMapper">

    <resultMap type="planDto" id="plan">
        <result column="plan_id" property="planId"/>
        <result column="user_id" property="userId"/>
        <result column="plan_name" property="planName"/>
    </resultMap>

    <resultMap type="planDetailDto" id="planDetail">
        <result column="plan_id" property="planId"/>
        <result column="plan_order" property="planOrder"/>
        <result column="content_id" property="contentId"/>
        <result column="descript" property="descript"/>
    </resultMap>


<!--    <select id=""-->
    <select id="findPlansByUserId" parameterType="memberDto" resultMap="plan">
        select * from plans where user_id = #{userId}
    </select>
    <select id="findPlanDetailsByPlanId" parameterType="planDto" resultMap="planDetail">
        select * from plan_detail where plan_id = #{planId}
    </select>
</mapper>
